<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="600.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.main.PlayerInformation_Controller">
   <children>
      <ImageView fitHeight="608.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../Picture/SignUp_Page1.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="usernameTextField" alignment="CENTER" focusTraversable="false" layoutX="104.0" layoutY="248.0" prefHeight="43.0" prefWidth="243.0" promptText="Username" style="-fx-background-radius: 15;">
         <font>
            <Font name="Book Antiqua Bold" size="19.0" />
         </font>
      </TextField>
      <TextField fx:id="passwordTextField" alignment="CENTER" focusTraversable="false" layoutX="104.0" layoutY="311.0" prefHeight="43.0" prefWidth="243.0" promptText="Password" style="-fx-background-radius: 15;">
         <font>
            <Font name="Book Antiqua Bold" size="19.0" />
         </font>
      </TextField>
      <Text fill="WHITE" layoutX="189.0" layoutY="144.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
         <font>
            <Font name="Bowlby One SC Regular" size="23.0" />
         </font>
      </Text>
      <Button fx:id="login_Button" layoutX="155.0" layoutY="458.0" mnemonicParsing="false" onMouseClicked="#login" onMouseEntered="#login_Enter" onMouseExited="#login_Exit" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: green; -fx-background-radius: 10;" text="Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
         <effect>
            <DropShadow color="WHITE" />
         </effect>
      </Button>
      <Button fx:id="menu_Button" layoutX="14.0" layoutY="563.0" mnemonicParsing="false" onMouseClicked="#goToMenu" onMouseEntered="#menu_Enter" onMouseExited="#menu_Exit" prefHeight="27.0" prefWidth="72.0" style="-fx-background-color: #090F37; -fx-background-radius: 10;" text="Menu" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
         <effect>
            <DropShadow color="RED" />
         </effect>
      </Button>
      <Label fx:id="error_Label" layoutX="104.0" layoutY="372.0" prefHeight="27.0" prefWidth="243.0" textFill="RED">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="successful_Label" layoutX="104.0" layoutY="405.0" prefHeight="27.0" prefWidth="243.0" textFill="#04bf04">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </children>
</Pane>
